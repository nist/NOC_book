{
   "title":"The Nature of Code",
   "destination":"build/:build",
   "files":[
      "chapters/**/*.html"
   ],
   "addPlugins":[
      "./plugins/addP5.js",
     "magicbook-codesplit",
     "magicbook-katex"
   ],
   "builds":[
      {
         "format":"pdf",
         "prince" : {
            "log":"errors.txt",
            "timeout" : 300000
         },
         "layout":"layouts/pdf.html",
         "stylesheets":{
            "files": [ "stylesheets/pdf.scss" ]
         },
         "images" : {
            "files" : "noc_pdf/imgs/**/*.*"
         },
         "fonts" : {
            "destination" : "assets/fonts/"
         }
      },
      {
         "format":"html",
          "layout":"layouts/html.html",
          "stylesheets":{
             "files": [ "noc_html/stylesheets/*.css" ],
             "destination" : "stylesheets/"
          },
          "javascripts" : {
            "files" : [ "noc_html/javascripts/*.js", "noc_html/processingjs/*.js" ],
            "destination" : "javascripts/"
          },
          "images" : {
             "files" : "noc_html/imgs/**/*.*",
             "destination" : "imgs/"
          },
          "fonts" : {
             "destination" : "fonts/"
          }
      }
   ]
}
